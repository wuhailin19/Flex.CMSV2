<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/scripts/layui/css/layui.css" rel="stylesheet" />
    <link href="~/scripts/layui/css/iconfont/iconfont.css" rel="stylesheet" />
    <script src="~/scripts/layui/layui.js" type="text/javascript"></script>
    <script src="~/scripts/route.js" type="text/javascript"></script>
    <script src="~/scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script src="~/system/js/admin/js/openpageoptions.js"></script>
    <style>
        .layui-layer-tips { width: auto !important; max-width: 400px; }
    </style>
</head>
<body>
    <div style="width:100%;overflow-x:scroll;">
        <table id="demo" lay-filter="test"></table>
    </div>
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    </script>
    <script type="text/html" id="toolbarDemo">
        <div class="layui-btn-container">
            <button class="layui-btn layui-btn-sm" lay-event="addRole">添加</button>
            <button class="layui-btn layui-btn-sm" lay-event="deleteAll">删除选中</button>
        </div>
    </script>
    <script type="text/html" id="loginstatusPxy">
        {{#if(d.AllowMultiLogin==true){}}
        <input type="checkbox" name="loginstatus" lay-skin="switch" lay-filter="loginstatus" value="{{d.Id}}" lay-text="允许|不允许" checked>
        {{#}else{}}
        <input type="checkbox" name="loginstatus" lay-skin="switch" lay-filter="loginstatus" value="{{d.Id}}" lay-text="允许|不允许">
        {{#}}}
    </script>
    <script type="text/html" id="lockstatusPxy">
        {{#if(d.Islock==true){}}
        <input type="checkbox" name="lockstatus" lay-skin="switch" lay-filter="lockstatus" value="{{d.Id}}" lay-text="禁用|启用" checked>
        {{#}else{}}
        <input type="checkbox" name="lockstatus" lay-skin="switch" lay-filter="lockstatus" value="{{d.Id}}" lay-text="禁用|启用">
        {{#}}}
    </script>
    <script>
        var routePageLink = '/system/Admin/';
        var routeLink = api + 'Admin/';
        defaultOptions.isOperaReload = false;
        defaultOptions.IsEditReload = false;
        defaultOptions.IdName = 'Id';
    </script>
    <script src="~/system/js/admin/js/index.js"></script>
</body>
</html>