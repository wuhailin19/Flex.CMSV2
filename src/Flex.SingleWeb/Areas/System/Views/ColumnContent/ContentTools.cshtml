<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/scripts/layui/css/layui.css" rel="stylesheet" />
    <script src="~/scripts/layui/layui.js" type="text/javascript"></script>
    <script src="~/scripts/jquery-3.4.1.min.js"></script>
    <script src="~/scripts/route.js" type="text/javascript"></script>
    <script src="~/scripts/core/commonutil.js"></script>
    <script>
        var contentIds = $.getUrlParam('Ids');
        var currentmodelId = $.getUrlParam('modelId');
        var parentId = $.getUrlParam('parentId');
    </script>
    <style>
        .columnlist { height: 70%; overflow-y: scroll; }
        .layui-tree-set { width: 80%; position: relative; }
        .layui-tree-set .layui-tree-entry { border: 1px solid #fff; box-sizing: border-box; }
        .layui-tree-set .layui-tree-entry.active { border: 1px solid rgb(102, 177, 255); }
        .layui-tree-main{width:100%;}
    </style>
</head>
<body>
    <form action="" onclick="return false;" style="padding: 2%;" class="layui-form">
        <div class="layui-form-item">
            <label class="layui-form-label">操作</label>
            <input type="radio" name="operation" lay-filter="operation" value="1" title="复制" checked>
            <input type="radio" name="operation" lay-filter="operation" value="2" title="移动">
            <input type="radio" name="operation" lay-filter="operation" value="3" title="引用">
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">站点</label>
            <div class="layui-input-inline">
                <select name="siteId" lay-search="" id="siteId" lay-filter="siteId-select">
                    <option value="">直接选择或搜索选择</option>
                </select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">栏目</label>
            <div class="layui-input-block">
                @* <select name="parentId" lay-search="" id="parentId">
                <option value="">直接选择或搜索选择</option>
                </select> *@
                <dl class="columnlist">
                    <dd>
                        <div id="parentIdhide" class="demo-tree-more"></div>
                    </dd>
                </dl>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
                <button type="reset" class="layui-btn layui-btn-primary" id="reset">重置</button>
            </div>
        </div>
    </form>
    <script src="~/system/js/columncontent/contenttool.js"></script>
</body>
</html>