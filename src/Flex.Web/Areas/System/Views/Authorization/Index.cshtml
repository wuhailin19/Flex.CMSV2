@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/scripts/layui/css/layui.css" rel="stylesheet" />
    <link href="~/scripts/layui/css/iconfont/iconfont.css" rel="stylesheet" />
    <script src="~/scripts/layui/layui.js" type="text/javascript"></script>
    <script src="~/scripts/route.js" type="text/javascript"></script>
    <script src="~/scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
    <link href="~/scripts/Page/index/index.css" rel="stylesheet" />
    <script src="/Views/Authorization/js/openPageOptions.js" type="text/javascript"></script>
</head>
<body>
    <div style="width:100%;overflow-x:scroll;">
        <table id="demo" lay-filter="test"></table>
    </div>
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    </script>
    <script type="text/html" id="statusPxy">
        {{#if(d.IsLock==true){}}
        <input type="checkbox" name="yyy" lay-skin="switch" lay-text="已锁|未锁" checked>
        {{#}else{}}
        <input type="checkbox" name="yyy" lay-skin="switch" lay-text="已锁|未锁">
        {{#}}}
    </script>
    <script type="text/html" id="toolbarDemo">
        <div class="layui-btn-container">
            <button class="layui-btn layui-btn-sm" lay-event="addRole">生成授权码</button>
            <button class="layui-btn layui-btn-sm" lay-event="deleteAll">删除选中</button>
        </div>
    </script>
    <script>
        var routeLink = api + 'Authorization/';
        defaultOptions.operawidths = 600;
        defaultOptions.operaheights = 650;
        defaultOptions.isOperaReload = false;
        defaultOptions.IsEditReload = false;
        defaultOptions.IdName = 'AuthorizationId';
    </script>
    <script src="/Views/Authorization/js/index.js"></script>
</body>
</html>